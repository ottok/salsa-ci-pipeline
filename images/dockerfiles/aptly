ARG CI_REGISTRY_IMAGE
ARG RELEASE
ARG STAGING_TAG
FROM $CI_REGISTRY_IMAGE/base:${RELEASE}${STAGING_TAG}

RUN \
set -eux; \
apt-get update --quiet; \
eatmydata apt-get install --no-install-recommends --yes \
    aptly \
    ; \
rm -rf /var/lib/apt
