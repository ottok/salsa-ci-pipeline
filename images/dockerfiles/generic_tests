ARG CI_REGISTRY_IMAGE
ARG RELEASE
ARG STAGING_TAG
FROM $CI_REGISTRY_IMAGE/base:${RELEASE}${STAGING_TAG}

# install dependencies for check rc bugs
RUN \
    set -eux; \
    apt-get update; \
    eatmydata apt-get install -y python3-debian python3-debianbts python3-junit.xml; \
    :

COPY scripts/check_rc_bugs.py /usr/local/bin
