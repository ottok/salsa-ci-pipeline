ARG RELEASE
FROM debian:$RELEASE

ENV DEBIAN_FRONTEND noninteractive

RUN echo "Acquire::Retries 5;" > /etc/apt/apt.conf.d/salsa-ci

RUN apt-get update && apt-get install -y --no-install-recommends \
    eatmydata \
    && rm -rf /var/lib/apt
